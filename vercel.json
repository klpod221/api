{
    "version": 2,
    "name": "api.klpod221",
    "builds": [
        { "src": "*.js", "use": "@vercel/node" },
        { "src": "public/**", "use": "@vercel/static" },
        { "src": "views/**", "use": "@vercel/static" }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "/" },
        { "src": "/api/(.*)", "dest": "/api/(.*)", "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"] },
        { "src": "/(.*)", "dest": "/views/index.html" }
    ]
}